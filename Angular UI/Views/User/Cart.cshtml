
@{
    ViewBag.Title = "Cart";
}

<h3>Shopping Cart</h3>
<br />
<div ng-controller="CartController" layout="row" ng-cloak>
        <div layout="column" style="width:70%">
            <md-card md-theme="default" md-theme-watch>
                <md-card-content>
                    <md-grid-list md-cols-xs="1" md-cols-sm="2" md-cols-md="4" md-cols-gt-md="6"
                                  md-row-height-gt-md="1:1" md-row-height="1:1"
                                  md-gutter="12px" md-gutter-gt-sm="8px">
                        <md-grid-tile class="green">
                            <md-grid-tile-footer>
                                <h3>#2: (1r x 1c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                        <md-grid-tile class="yellow">
                            <md-grid-tile-footer>
                                <h3>#3: (1r x 1c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                        <md-grid-tile class="red"
                                      md-rowspan="1" md-colspan="4" md-colspan-sm="1" md-colspan-xs="1">
                            <md-grid-tile-footer>
                                <h3>#5: (2r x 2c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                    </md-grid-list>
                </md-card-content>
            </md-card>

            <md-card md-theme="default" md-theme-watch>
                <md-card-content>
                    <md-grid-list md-cols-xs="1" md-cols-sm="2" md-cols-md="4" md-cols-gt-md="6"
                                  md-row-height-gt-md="1:1" md-row-height="1:1"
                                  md-gutter="12px" md-gutter-gt-sm="8px">
                        <md-grid-tile class="green">
                            <md-grid-tile-footer>
                                <h3>#2: (1r x 1c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                        <md-grid-tile class="yellow">
                            <md-grid-tile-footer>
                                <h3>#3: (1r x 1c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                        <md-grid-tile class="red"
                                      md-rowspan="1" md-colspan="4" md-colspan-sm="1" md-colspan-xs="1">
                            <md-grid-tile-footer>
                                <h3>#5: (2r x 2c)</h3>
                            </md-grid-tile-footer>
                        </md-grid-tile>
                    </md-grid-list>
                </md-card-content>
            </md-card>

        </div>
        <md-card md-theme="default" md-theme-watch style="width:30%;height:250px;">
            <md-card-content>

            </md-card-content>
        </md-card>
</div>